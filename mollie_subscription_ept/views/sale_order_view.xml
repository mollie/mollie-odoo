<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_sales_order_subscription" model="ir.ui.view">
        <field name="name">sale.order.form.subscription</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='customer_signature']" position="after">
                <page string="Subscriptions" name="subscription_info"
                      attrs="{'invisible': [('mollie_subscription_id', '=', False)]}">
                    <group>
                        <field
                                name="mollie_subscription_id"
                                widget="one2many_list"
                                colspan="4"
                                nolabel="1"
                                mode="kanban"
                                options="{'no_create_edit': True}"
                        />
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>